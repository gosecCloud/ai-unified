{
  "name": "@aiu/provider-ollama",
  "version": "0.1.0",
  "description": "Ollama (local models) provider adapter for AI Unified",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src"
  },
  "dependencies": {
    "@aiu/core": "workspace:*",
    "@aiu/transport": "workspace:*"
  },
  "keywords": ["ollama", "local", "ai", "provider"],
  "license": "MIT"
}
